<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.edgarsjanovskis.adlus.WelcomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Laipni lūgts ADLUS!"
        android:textColor="@color/lightBlue"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Darba laika uzskaites sistēmā, kura atvieglos Tavu ikdienu"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/textView2" />

    <Button
        android:text="Spied šeit un sāc lietot!"
        android:textSize="24sp"
        android:background="@color/lightBlue"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/btnStart"
        android:onClick="btnStart_onClick"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
