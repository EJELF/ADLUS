<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.android.edgarsjanovskis.adlus.WelcomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/laipni_l_gts_adlus"
        android:textColor="@color/lightBlue"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/darba_laika_uzskaites_sist_m_kas_rad_ta_lai_atvieglotu_tavu_darba_ikdienu"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginTop="21dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lai_adlus_aplik_cija_var_tu_darboties_tai_ir_nepiecie_amas_das_at_aujas_n_at_auja_noteikt_atra_an_s_vietu_n_at_auja_izmantot_wifi_t_klu_n_at_auja_izmantot_mobilos_datus"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="21dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/spied_eit_un_s_c_lietot"
        android:textSize="22sp"
        android:background="@color/lightBlue"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:onClick="btnStart_onClick"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
